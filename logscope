#!/usr/bin/env python3
"""
Simple launcher for Nevil LogScope with GUI icons
"""
import os
import sys

# Add parent directory to path for imports
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

# Set Qt platform to avoid Wayland warning
os.environ['QT_QPA_PLATFORM'] = 'xcb'

# Launch logscope
from nevil_framework.logscope.launcher import main

if __name__ == "__main__":
    # Default to logs directory
    if len(sys.argv) == 1:
        sys.argv.append("--log-dir")
        sys.argv.append("logs")

    main()